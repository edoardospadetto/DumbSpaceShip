

SHADER VERTEX debug_colliders_vertex

#version 330 core
layout (location = 0) in vec2 aPos;
uniform vec2 c;
void main()
{	
    gl_Position = vec4(aPos.x+c.x, aPos.y+c.y, 0.0, 1.0);
}

ENDSHADER

SHADER FRAGMENT debug_colliders_fragment

#version 330 core

out vec4 FragColor;


void main()
{			
	FragColor =  vec4(1.0, 0.0, 0.0, 1.0);
} 

ENDSHADER



